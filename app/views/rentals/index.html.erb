<%if @rentals.blank? %>
  <h1>Nenhuma locação cadastrado</h1>
<%else%>
  <table>
    <tr>
      <th>Data de inicio</th>
      <th>Data final</th>
      <th>Cliente</th>
      <th>Categoria</th>
    </tr>
    <%@rentals.each do |rental|%>
      <tr>
        <td><%=l rental.start_date%>
        <td><%=l rental.end_date%>
        <td><%=link_to rental.customer.identification, rental.customer%>
        <td><%=link_to rental.car_category.name, rental.car_category%>
      </tr>
    <%end%>
  </table>
<%end%>
<%=link_to 'Registrar nova locação', new_rental_path%>
