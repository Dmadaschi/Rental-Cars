<!DOCTYPE html>
<html>
  <head>
    <title><%= t('.title') %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <nav>
      <% if user_signed_in? %>
        <h4><%= link_to t('.log_out'), destroy_user_session_path, method: :delete %></h4>

        <h4><%= link_to (Manufacturer.model_name.human(count:2)), manufacturers_path %></h4>

        <h4><%= link_to (Subsidiary.model_name.human(count:2)), subsidiaries_path %></h4>
  
        <h4><%= link_to (CarCategory.model_name.human(count:2)), car_categories_path %></h4>
  
        <h4><%= link_to (Customer.model_name.human(count:2)), customers_path %></h4>
  
        <h4><%= link_to (Rental.model_name.human), rentals_path %></h4>
  
        <h4><%= link_to (CarModel.model_name.human(count:2)), car_models_path %></h4>

        <h4><%= link_to (Car.model_name.human(count:2)), cars_path %></h4>
      <%else%>
        <h4><%= link_to t('.login'), new_user_session_path %></h4>
      <%end%>
    </nav>

    <h2><%= flash[:notice]%></h2>
    <h2><%= flash[:success]%></h2>
    <h2><%= flash[:alert]%></h2>

    <%= yield %>
  </body>
</html>
