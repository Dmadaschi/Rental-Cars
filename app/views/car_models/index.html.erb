<% if @car_models.blank? %>
  <h1>Nenhum modelo de carro cadastrado</h1>
<%else%>
  <table>
    <tr>
      <th>Modelo</th>
      <th>Ano</th>
      <th>Motor</th>
      <th>Comb√∫stivel</th>
      <th>Fabricante</th>
      <th>Categoria</th>
    </tr>
    <% @car_models.each do |car_model|%>
      <tr>
        <td><%= car_model.name %></td>
        <td><%= car_model.year %></td>
        <td><%= car_model.motorization %></td>
        <td><%= car_model.fuel_type %></td>
        <td><%= link_to car_model.manufacturer.name, car_model.manufacturer %></td>
        <td><%= link_to car_model.car_category.name, car_model.car_category %></td>
      </tr>
    <%end%>
  </table>
<% end %>

<h2><%=link_to 'Registrar novo modelo', new_car_model_path%></h2>

